FROM php:8.2-apache

RUN a2enmod rewrite

# Install PDO/MySQL and LDAP extensions
RUN apt-get update && apt-get install -y \
    libldap2-dev \
    && docker-php-ext-configure ldap \
    && docker-php-ext-install pdo pdo_mysql mysqli ldap \
    && apt-get clean && rm -rf /var/lib/apt/lists/*

# Enable Apache modules for auth (available if needed)
RUN a2enmod authnz_ldap || true

WORKDIR /var/www/html

COPY ./app /var/www/html

RUN chown -R www-data:www-data /var/www/html